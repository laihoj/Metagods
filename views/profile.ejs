<% include ./partials/header %>
<div class="container">
	<div class="section match">
		<div class="row">
			<div class="u-full-width">
				<h2><%= currentUser.username %></h2>
				<h3>My Favourite Decks</h3>
				<ul>
					<% for(var i = 0; i < currentUser.decks.length; i++) { %>
						<li><a href="/decks/<%= currentUser.decks[i] %>"><%= currentUser.decks[i] %></a></li>
					<% } %>
				</ul>
				<form action="/decks/new" method="get">
				<input type="submit" value="New Deck">
				</form>
			</div>
		</div>
	</div>
</div>

<% include ./partials/footer %>